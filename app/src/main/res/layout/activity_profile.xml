<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Profile"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RatingsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/RatingsTitle" />

                <TextView
                    android:id="@+id/FavoritesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Favorites"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/FavoritesRecyclerView"
                    app:layout_constraintTop_toBottomOf="@+id/NumOfRatings" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/FavoritesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:clickable="false"
                    app:layout_constraintBottom_toTopOf="@+id/RatingsTitle"
                    app:layout_constraintTop_toBottomOf="@+id/FavoritesTitle"
                    tools:itemCount="3" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ProfilePicture"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/default_spradling"
                    app:civ_border_color="#EFEFEF"
                    app:civ_border_width="4dp"
                    app:civ_shadow="false"
                    app:civ_shadow_color="#8BC34A"
                    app:civ_shadow_radius="10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/NumOfRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ratings: 0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FirstName" />

                <TextView
                    android:id="@+id/FirstName"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="12dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Matthew Spradling"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ProfilePicture" />

                <TextView
                    android:id="@+id/RatingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/ratings"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FavoritesRecyclerView" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>